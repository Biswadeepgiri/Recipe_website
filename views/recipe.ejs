<% if(recipe !=null) { %>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></li>
        </ol>
    </nav>
    <br>

    <div class="row">
        <!-- image of the recipe -->
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 20px;"
                alt="<%- recipe.name %>" loading="lazy">
        </div>

        <!-- information about the recipe -->

        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h2 class="bold-3"><%- recipe.name %></h2>
                </div>
                <div class="col-12 mb-4"><i class="bi bi-tag"> <%- recipe.category %></i></div>
                <div class="col-12 " style="white-space: pre-line;">
                    <h3>Cooking Instructions</h3>

                    <%- recipe.description %>

                </div>

            </div>

            <!-- ingredients of the recipe -->

            <div class="row pt-4">
                <div class="col-12">
                    <h3>Ingredients</h3>
                    <ul class="list-group list-group-flush">
                        <% if(recipe.ingredients!='' ) { %>
                            <% recipe.ingredients.forEach(function(ingredient,index) { %>

                                <li class="list-group-item">
                                    <h5><%- ingredient %></h5>
                                </li>
                                <% }) %>
                                    <% } %>
                    </ul>

                </div>
            </div>
            <div class="col-12">
                <!-- <a href="/update-recipe/<%- recipe._id %>" class="btn btn-success">Update recipe</a> -->
                <a href="/delete-recipe/<%- recipe._id %>" class="btn btn-danger">Delete recipe</a>

            </div>


        </div>



        <% } else { %>
            <p>No item found.</p>
            <% } %>