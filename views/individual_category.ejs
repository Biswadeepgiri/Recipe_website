<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/categories">Explore Categories</a> </li>
        <li class="breadcrumb-item active" aria-current="page"><%- category_id %></li>
    </ol>
</nav>
<section class="latest pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2><%- category_id %> Recipes</h2>

        <!-- <a href="/categories/Indian" class="ms-auto ">View More</a> -->
    </div>



    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if(category_recipes !='' ) { %>
            <% category_recipes.forEach(function(recipe,index) { %>
                <a href="/recipe/<%- recipe._id %>" class="col text-center category__link">
                    <div class="category__img category__img--large shadow">
                        <img src="/uploads/<%- recipe.image %>" alt="<%- recipe.name %>" loading="lazy">
                    </div>
                    <div class="pt-1"><%- recipe.name %></div>
                </a>

                <% }) %>

                    <% } else { %>
                        <p>No items found.</p>
                        <% } %>
    </div>
</section>